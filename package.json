{
  "name": "siga",
  "version": "1.0.0",
  "main": "main.mjs",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "cd Frontend && npm run build && cd .. && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.siga",
    "files": [
      "dist/**/*",
      "main.mjs",
      "preload.mjs"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0", 
    "electron-builder": "^24.0.0" 
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1"
  }
}